    "playwright": "^1.39.0",
    "rollup": "^4.9.0",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typedoc": "0.25.3",
    "typedoc-plugin-markdown": "3.17.1",
    "typescript": "5.2.2"
  },
  "types": "dist/bundle/web.d.ts",
  "repository": {
    "type": "git",
