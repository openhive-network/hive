      "compression": "none"
    },
    {
      "path": "./dist/bundle/node.d.ts",
      "maxSize": "15 kB",
      "compression": "none"
    },
    {
      "path": "./dist/bundle/web.js",
      "maxSize": "5000 kB",
      "compression": "none"
    },
    {
      "path": "./dist/bundle/web.d.ts",
      "maxSize": "15 kB",
      "compression": "none"
    }
  ],
  "exports": {
    ".": {
      "node": {
        "import": {
          "types": "./dist/bundle/node.d.ts",
          "default": "./dist/bundle/node.js"
        }
      },
      "default": {
        "import": {
          "types": "./dist/bundle/web.d.ts",
          "default": "./dist/bundle/web.js"
        }
      }
    },
    "./web": {
      "import": {
        "types": "./dist/bundle/web.d.ts",
        "default": "./dist/bundle/web.js"
      }
    },
    "./node": {
